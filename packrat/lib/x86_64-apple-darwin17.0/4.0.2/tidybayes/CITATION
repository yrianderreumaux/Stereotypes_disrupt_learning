year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

bibentry(
  bibtype = "Manual",
  title = paste("{tidybayes}: Tidy Data and Geoms for {Bayesian} Models"),
  author = c(person("Matthew", "Kay")),
  year = year,
  note = note,
  url = "http://mjskay.github.io/tidybayes/",
  doi = "10.5281/zenodo.1308151"
)
