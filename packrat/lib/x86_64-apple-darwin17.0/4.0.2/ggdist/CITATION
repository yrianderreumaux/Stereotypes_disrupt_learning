year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

bibentry(
  bibtype = "Manual",
  title = paste("{ggdist}: Visualizations of Distributions and Uncertainty"),
  author = c(person("Matthew", "Kay")),
  year = year,
  note = note,
  url = "https://mjskay.github.io/ggdist/",
  doi = "10.5281/zenodo.3879620"
)
